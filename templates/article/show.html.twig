{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ article.imageUrl }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
           <tr>
                <th>Categories</th>
                <td>
                    {% for category in article.categories %}
                        <div class="article-category-item badge">
                            <a href="{{ path('app_single_category', {'slug': category.slug}) }}">{{ category.name }}</a>
                            ({{ category.articles | length }} article(s) publi√©(s))
                        </div>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

 
<a href="{{ path('app_article_index') }}" class="btn btn-sm btn-secondary" style="margin-bottom: 10px;">Back to List</a>

 <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning" style="margin-bottom: 10px;">Edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
