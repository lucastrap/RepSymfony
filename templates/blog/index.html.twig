{% extends 'base.html.twig' %}

{% block title %}The blog{% endblock %}

{% block body %}
    {% for article in articles %}
        <img src={{article.imageUrl}} width="300" heigth="300" alt="Image de l'article : {{article.title}}"><BR>
        <img src={{article.author.profile.picture}} width="50" height="50" alt="image de profile de {{article.author.name}}">
        <h2> {{article.title}}</h2>
        {{article.createdAt | date("d/m/Y")}}<BR>
    {% endfor %}
{% endblock %}
